# .env (w katalogu backend/)

# ----------------------------
# 1. Konfiguracja bazy MySQL
# ----------------------------
DB_HOST=localhost
DB_PORT=8889
DB_USER=root
DB_PASS=root
DB_NAME=clinic

# ----------------------------
# 2. JWT
# ----------------------------
JWT_SECRET=your_jwt_secret_here

# ----------------------------
# 3. SMTP (Home.pl)
# ----------------------------
# dokładny serwer SMTP z panelu Home.pl
SMTP_HOST=serwer2309035.home.pl

# port 25 (jak na zrzucie)
SMTP_PORT=25

# login do skrzynki: zwykle w Home.pl podaje się nazwę użytkownika w formacie „nazwa.uzytkownika” bez @,
# a pole „Email” (adres do: ) to już pełny adres (np. rezerwacje@moroch.pl).
# W nodemailerze jako user możemy podać tak, jak w panelu Home.pl w polu „Nazwa użytkownika”.
EMAIL_USER=rezerwacje.serwer2309035

# hasło do konta „rezerwacje@moroch.pl”
EMAIL_PASS=rezerwacje2025!
